@model E_commerce_2.Auth.Models.DTO.RegisterUserDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    if (ViewBag.WrongUser != null)
    {
        <h2>@ViewBag.WrongUser</h2>
    }
}

<section class="vh-100" style="background-color: #eee;">
    <div style="font-size: 16px" asp-validation-summary="All"></div>

    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <form asp-controller="Auth" asp-action="SingUp" method="post" class="mx-1 mx-md-4">
                                    @Html.AntiForgeryToken()

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Username</label>
                                            <input name="Username" type="text" id="Username" class="form-control" asp-for="Username" />
                                            <span asp-validation-for="Username"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Password</label>
                                            <input name="Password" type="password" id="Password" class="form-control" asp-for="Password" />
                                            <span asp-validation-for="Password"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Email</label>
                                            <input name="Email" type="email" id="Email" class="form-control" asp-for="Email" />
                                            <span asp-validation-for="Email"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Roles</label>
                                            <input name="Roles" type="text" id="Roles" class="form-control" asp-for="Roles" />
                                            <span asp-validation-for="Roles"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

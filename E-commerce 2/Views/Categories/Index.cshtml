@model IEnumerable<E_commerce_2.Models.Categories>
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Index";
    var isAdministrator = User.IsInRole("Administrator");
    var isEditor = User.IsInRole("Editor");
}


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Logo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    @if (isEditor)
                    {
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    }
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    @if (isAdministrator)
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                    @if (isEditor)
                    {
                <a asp-controller="Categories" asp-action="AddProductToCategories" asp-route-CategoryId="@item.Id">AddProduct</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>

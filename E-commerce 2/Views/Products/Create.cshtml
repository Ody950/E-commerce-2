@model E_commerce_2.Models.Product

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <h1 class="text-center text-danger">Create Product</h1>
            <hr />

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mt-2 mb-2">
                    <label for="file" class="control-label">Upload Image</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input btn-danger" id="file" name="file">
                        </div>
                    </div>
                </div>


                <div class="form-group" style="display: none;">
                    <label asp-for="ImageURL" class="control-label"></label>
                    <input asp-for="ImageURL" class="form-control" value="1" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mt-4 mb-2 text-center">
                    <div class="row justify-content-center">
                        <div class="col-md-3">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                        <div class="col-md-3">
                            <a asp-action="Index" class="btn btn-danger">Back to List</a>
                        </div>
                    </div>
                </div>


            </form>

            
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

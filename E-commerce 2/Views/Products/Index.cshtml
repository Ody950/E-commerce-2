@model IEnumerable<E_commerce_2.Models.Product>
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Index";
    var isAdministrator = User.IsInRole("Administrator");
    var isEditor = User.IsInRole("Editor");
}

<div class="d-flex justify-content-between align-items-center">
    <h1 class="text-center text-danger mt-5 mb-5">Products</h1>

    @if (isAdministrator)
    {
        <a class="btn btn-danger text-center text-white mt-4 mb-4 fs-5" asp-action="Create">Create New</a>
    }
</div>

<a class="mt-5 mb-5 " href="/Products/Index">
    <img src="/Image/m4.jpg" alt="Advertisement Image" class="img-fluid mt-5 mb-5 ">
</a>

<div class="row  mb-5">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card border border-2 border-gray CStyle bg-light">
                <img src="@item.ImageURL" class="card-img-top product-image" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title text-center text-danger">@item.Name</h5>
                    <p class="card-text text-center text-secondary">$@item.Price</p>
                    <div class="btn-group d-flex" role="group" aria-label="Product Actions">
                        @if (isEditor)
                        {
                            <a class="btn btn-danger text-white" href="@Url.Action("Edit", new { id = item.Id })">Edit</a>
                        }
                        @if (isAdministrator)
                        {
                            <a class="btn btn-danger text-white" href="@Url.Action("ReplacePicture", new { id = item.Id })">Replace Picture</a>
                        }
                        <a class="btn btn-danger text-white" href="@Url.Action("Details", new { id = item.Id })">Details</a>
                        @if (isAdministrator)
                        {
                            <a class="btn btn-danger text-white" href="@Url.Action("DeleteView", new { id = item.Id })">Delete</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>











